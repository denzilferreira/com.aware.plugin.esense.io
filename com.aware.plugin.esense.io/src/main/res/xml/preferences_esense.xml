<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
            android:defaultValue="false"
            android:key="status_plugin_esense"
            android:persistent="true"
            android:summary="Enable/disable plugin"
            android:title="Active"/>

    <EditTextPreference
        android:key="device_plugin_esense"
        android:persistent="true"
        android:summary="The bluetooth name of your eSense device"
        android:title="eSense ID"
        />

    <EditTextPreference
            android:key="frequency_plugin_esense"
            android:persistent="true"
            android:summary="1 Hz - 100 Hz (max)"
            android:inputType="numberDecimal"
            android:title="Sampling rate"
    />
</PreferenceScreen>
